@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>@ViewData["Title"] - Voll.med</title>

    <link rel="icon" type="image/x-icon" href="favicon.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="medvoll-header">
        <div class="medvoll-header-container">
            <nav class="medvoll-header-navbar">
                <a href="@Configuration["WebAppClient"]" class='logo logo-header'>
                </a>
            </nav>
      </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <footer class='medvoll-footer'>
        <div class='medvoll-footer-content'>
            <div class='medvoll-footer-row'>
                <span>Clínica Vollmed</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
